{
  "manifest_version": 2,
  "name": "IG Downloader Minimal",
  "description": "Minimal Instagram image and video downloader with FFmpeg support - posts and reels only",
  "version": "1.0.0",
  "icons": {
    "512": "icons/instagram.png"
  },
  "web_accessible_resources": [
    "icons/instagram.png",
    "lib/*",
    "js/node_modules_ffmpeg_ffmpeg_dist_esm_worker_js.js"
  ],
  "content_security_policy": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';",
  "options_ui": {
    "page": "options.html"
  },
  "permissions": [
    "downloads",
    "tabs",
    "*://*.instagram.com/*",
    "*://*.cdninstagram.com/*",
    "*://*.cdninstagram.net/*",
    "*://*.fbcdn.net/*"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.instagram.com/*"
      ],
      "js": [
        "js/extension.js"
      ],
      "css": [
        "css/extension.css"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}

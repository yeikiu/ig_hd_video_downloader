{
  "manifest_version": 3,
  "name": "IG Downloader Minimal",
  "description": "Minimal Instagram image and video downloader with FFmpeg support - posts and reels only",
  "version": "2.0.0",
  "icons": {
    "512": "icons/instagram.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/instagram.png",
        "lib/*",
        "ts/*",
        "node_modules/*"
      ],
      "matches": [
        "*://*.instagram.com/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [
    "downloads",
    "tabs",
    "offscreen"
  ],
  "host_permissions": [
    "*://*.instagram.com/*",
    "*://*.cdninstagram.com/*",
    "*://*.cdninstagram.net/*",
    "*://*.fbcdn.net/*"
  ],
  "background": {
    "service_worker": "ts/background/BackgroundMessageHandler.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.instagram.com/*"
      ],
      "js": [
        "content-script-loader.js"
      ],
      "css": [
        "css/alert.css"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}
